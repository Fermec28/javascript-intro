<div id="todo">
  <div class="toolbox">
    <form action="/add_todo" method="post">
      <input type="text" class="todo" value="Put your todo item here!"/>
      <input type="submit" value="Add Todo"/>
      <!-- <button class="add" type="submit">Add Todo</button> -->
    </form>
  </div>

  <div class="todo_list">

  </div>

  <div id="todo_template">
    <div class="todoContainer">
      <h2>Todo Name</h2>
      <ul>
        <% @posts.each do |post|  %>
          <li><%= post.todo_content%></li>
        <% end %>
      <!--
        <li><a href="#" class="delete">Delete</a></li>
        <li><a href="#" class="complete">Complete</a></li>
      -->
      </ul>
    </div>
  </div>
</div>
